<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.ProductosEntity" table="Productos" schema="dbo" catalog="PennyFlama">
        <id name="id">
            <column name="Id" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="Nombre" sql-type="nvarchar(60)" length="60"/>
        </property>
        <property name="precioVenta">
            <column name="Precio_venta" sql-type="smallmoney"/>
        </property>
        <property name="descripcion">
            <column name="Descripcion" sql-type="nvarchar(200)" length="200" not-null="true"/>
        </property>
        <property name="stock">
            <column name="Stock" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>