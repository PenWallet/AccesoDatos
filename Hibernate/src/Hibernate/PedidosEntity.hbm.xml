<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.PedidosEntity" table="Pedidos" schema="dbo" catalog="PennyFlama">
        <id name="id">
            <column name="Id" sql-type="int"/>
        </id>
        <property name="fechaPedido">
            <column name="Fecha_Pedido" sql-type="smalldatetime"/>
        </property>
        <property name="fechaEntrega">
            <column name="Fecha_Entrega" sql-type="smalldatetime" not-null="true"/>
        </property>
        <property name="totalPedido">
            <column name="Total_Pedido" sql-type="money"/>
        </property>
    </class>
</hibernate-mapping>