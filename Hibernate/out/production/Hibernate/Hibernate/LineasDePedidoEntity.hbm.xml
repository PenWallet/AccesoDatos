<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Hibernate.LineasDePedidoEntity" table="LineasDePedido" schema="dbo" catalog="PennyFlama">
        <composite-id mapped="true" class="Hibernate.LineasDePedidoEntityPK">
            <key-property name="idPedido">
                <column name="Id_Pedido" sql-type="int"/>
            </key-property>
            <key-property name="idProducto">
                <column name="Id_Producto" sql-type="int"/>
            </key-property>
        </composite-id>
        <property name="precioUnitario">
            <column name="Precio_Unitario" sql-type="smallmoney"/>
        </property>
        <property name="cantidad">
            <column name="Cantidad" sql-type="int"/>
        </property>
        <property name="impuestos">
            <column name="Impuestos" sql-type="decimal(3,2)" precision="3" scale="2"/>
        </property>
        <property name="subtotal">
            <column name="Subtotal" sql-type="money"/>
        </property>
    </class>
</hibernate-mapping>